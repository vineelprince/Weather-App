from dotenv import load_dotenv
import os
import requests
import streamlit as st

load_dotenv()
API_KEY = os.getenv("API_KEY")
BASE_URL = "http://api.openweathermap.org/data/2.5/weather?"

st.title("ğŸŒ¦ï¸ Weather App")
city = st.text_input("Enter City Name")

if st.button("Get Weather"):
    if city:
        url = f"{BASE_URL}q={city}&appid={API_KEY}&units=metric"
        response = requests.get(url)
        data = response.json()

        if data["cod"] != "404":
            weather = data["main"]
            temp = weather["temp"]
            humidity = weather["humidity"]
            pressure = weather["pressure"]
            wind_speed = data["wind"]["speed"]
            description = data["weather"][0]["description"]

            st.success(f"**Weather in {city}**")
            st.write(f"ğŸŒ¡ï¸ Temperature: {temp}Â°C")
            st.write(f"ğŸ’§ Humidity: {humidity}%")
            st.write(f"ğŸ“ˆ Pressure: {pressure} hPa")
            st.write(f"ğŸ’¨ Wind Speed: {wind_speed} m/s")
            st.write(f"â˜ï¸ Condition: {description}")
        else:
            st.error("City Not Found âŒ")
